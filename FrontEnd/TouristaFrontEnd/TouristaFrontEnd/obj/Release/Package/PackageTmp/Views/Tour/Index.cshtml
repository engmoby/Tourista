
@using Tourista.API.Models
@using TouristaFrontEnd.Helper
@model List<Tourista.API.Models.TourModel>
@{
    ViewBag.Title = "Tours";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="wrapper-content">
    <!-- MAIN CONTENT-->
    <div class="main-content">
        <section class="page-banner tour-result-hajj">
            <div class="container">
                <div class="page-title-wrapper">
                    <div class="page-title-content">
                        <ol class="breadcrumb">
                            <li>
                                @Html.ActionLink(@TouristaFrontEnd.Resources.Global.Header_Home, "Index", "Home", null, new { @class = "link home" }) 
                            </li>
                            <li class="active"><a href="#" class="link">@TouristaFrontEnd.Resources.Global.Header_Tour</a></li>
                        </ol>
                        <div class="clearfix"></div>
                        <h2 class="captions">@TouristaFrontEnd.Resources.Global.Header_Tour</h2>
                    </div>
                </div>
            </div>
        </section>
        <div class="page-main">
            <div class="clearfix"></div>
            <div class="hotel-result-main padding-top padding-bottom">
                <div class="container">
                    <div class="result-meta">
                        <div class="row">
                            <div class="col-lg-4 col-md-12">
                                <div class="result-count-wrapper">Results Found: <span class="result-count">@Model.Count</span></div>
                            </div>
                            @*<div class="col-lg-8 col-md-12">
                                <div class="result-filter-wrapper">
                                    <form>
                                        <label class="result-filter-label">Sort by :</label>
                                        <div class="selection-bar">
                                            <div class="select-wrapper">
                                                <select name="Recommended" class="custom-select selectbox">
                                                    <option value="" disabled="disabled" selected="selected" hidden="hidden">Price</option>
                                                    <option value="1">lower to higher </option>
                                                    <option value="2">higher to lower</option>
                                                </select>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>*@
                        </div>
                    </div>
                    <div class="result-body">
                        <div class="row">
                            <div class="col-md-8 main-right">
                                <div class="hotel-list">
                                    <div class="row">

                                        @if (Model != null)
                                        {
                                            foreach (TourModel TourObj in Model)
                                            {
                                                <div class="col-sm-12">
                                                    <div class="hotels-layout">
                                                        <div class="image-wrapper">
                                                            <a href="/Tour/Details/@TourObj.TourId" class="link"><img src="@TourObj.ImagesURL[0]" alt="" class="img-responsive"></a>


                                                            <div class="title-wrapper">
                                                                <a href="/Tour/Details/@TourObj.TourId" class="title">
                                                                    @if (@TourObj.TitleDictionary[@Common.CurrentLang].Length >= 20)
                                                                    {

                                                                        @TourObj.TitleDictionary[@Common.CurrentLang].Substring(0, 20)

                                                                    }
                                                                    else
                                                                    {
                                                                        @TourObj.TitleDictionary[@Common.CurrentLang]
                                                                    }
                                                                </a>
                                     
                                                             </div>
                                                        </div>
                                                        <div class="content-wrapper">
                                                            <div class="content">
                                                                <div class="title">
                                                                </div>
                                                                <p class="text">
                                                                    @if (@TourObj.DescriptionDictionary[@Common.CurrentLang].Length >= 40)
                                                                    {

                                                                        @MyHTMLHelpers.PreserveNewLines(Html, @TourObj.DescriptionDictionary[@Common.CurrentLang].Substring(0, 40))

                                                                    }
                                                                    else
                                                                    {
                                                                        @MyHTMLHelpers.PreserveNewLines(Html, @TourObj.DescriptionDictionary[@Common.CurrentLang])
                                                                    }
                                                                </p>


                                                                <div class="group-btn-tours"><a href="/Tour/Details/@TourObj.TourId" class="left-btn">@TouristaFrontEnd.Resources.Global.BookNow</a></div>
                                                            </div>
                                                            <ul class="list-info list-unstyled">
                               
                                                                @*<li>
                                                                    <a href="javascript:void(0)" class="link"><i class="icons fa fa-share-alt"></i></a>
                                                                    <ul class="share-social-list">
                                                                        <li><a href="#" class="link-social"><i class="icons fa fa-facebook"></i></a></li>
                                                                        <li><a href="#" class="link-social"><i class="icons fa fa-google-plus"></i></a></li>
                                                                        <li><a href="#" class="link-social"><i class="icons fa fa-twitter"></i></a></li>
                                                                    </ul>
                                                                </li>*@

                                                            </ul>
                                                        </div>
                                                    </div>
                                                </div>

                                                                        }
                                                                    }
                                    </div>
                                </div> 
                            </div>
                             
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <!-- BUTTON BACK TO TOP-->
    <div id="back-top"><a href="#top" class="link"><i class="fa fa-angle-double-up"></i></a></div>
</div>
