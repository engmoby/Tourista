
@using TouristaFrontEnd.Helper

@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="wrapper-content">
    <!-- MAIN CONTENT-->
    <div class="main-content">
        <section class="page-banner contact-page">
            <div class="container">
                <div class="page-title-wrapper">
                    <div class="page-title-content">
                        <ol class="breadcrumb">
                            <li>
                                @Html.ActionLink(@TouristaFrontEnd.Resources.Global.Header_Home, "Index", "Home", null, new { @class = "link home" })
                            </li>
                            <li class="active"> <a href="#" class="link ">@TouristaFrontEnd.Resources.Global.Header_Contact</a></li>
                        </ol>
                        <div class="clearfix"></div>
                        <h2 class="captions">@TouristaFrontEnd.Resources.Global.Header_Contact</h2>
                    </div>
                </div>
            </div>
        </section>
        <section class="padding-top padding-bottom contact-organization">
            <div class="container">
                <h3 class="title-style-2">@TouristaFrontEnd.Resources.Global.Ourorganization</h3>
                <div class="row">
                    <div class="col-md-2 col-sm-6 col-xs-12">
                        <div class="wrapper-organization">
                            <img src="/Content/images/logo/logo-2.png" alt="" class="img img-responsive">
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-6 col-xs-12 md-organization">
                        <div class="content-organization">
                            <div class="content-widget">
                                <div class="info-list" style="margin-top: 60px;">
                                    <ul class="list-unstyled">
                                        @if (@Model != null)
                                        {


                                            <li class="main-list" style="margin-left: 0px;"><i class="icons fa fa-map-marker"></i> @Model.AddressDictionary[Common.CurrentLang] </li>
                                            <li class="main-list" style="margin-left: 0px;"><i class="icons fa fa-phone"></i> @Model.Phone</li>
                                            <li class="main-list" style="margin-left: 0px;"><i class="icons fa fa-phone"></i> @Model.Phone1</li>
                                            <li class="main-list" style="margin-left: 0px;"><i class="icons fa fa-phone"></i> @Model.Phone2</li>
                                            <li class="main-list" style="margin-left: 0px;"><i class="icons fa fa-phone"></i>@Model.Fax</li>
                                            <li class="main-list" style="margin-left: 0px;"><i class="icons fa fa-envelope-o"></i>  @Model.Mail </li>
                                            <li class="main-list" style="margin-left: 0px;"><i class="icons fa fa-envelope-o"></i>  @Model.Mail1 </li>
                                            <li class="main-list" style="margin-left: 0px;"><i class="icons fa fa-envelope-o"></i>  @Model.Mail2 </li>
                                            <ul class="list-inline list-unstyled">
                                                <li><a href="@Model.Facebook" target="_blank" class="link facebook"><i class="fa fa-facebook"></i></a></li>
                                                <li>@*<a href="@Model.LinkedIn" target="_blank" class="link facebook"><i class="fa fa-linkedin"></i></a>*@</li>
                                                <li><a href="@Model.Twitter" class="link twitter"><i class="fa fa-twitter"></i></a></li>
                                                <li><a href="@Model.Instgram" class="link facebook"><i class="fa fa-instagram"></i></a></li>
                                            </ul>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-xs-12">
                        <section class="page-contact-map">
                            <div class="map-block">
                                <iframe height="300px" width="700px" src="https://maps.google.com/maps?q=29.9730556,31.2727222&hl=es;z=14&amp;output=embed" class="mg-map"></iframe>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </section>
        <section class="contact style-1 page-contact-form padding-top padding-bottom">
            <div class="container">
                <div class="wrapper-contact-form">
                    <div data-wow-delay="0.5s" class="contact-wrapper wow fadeInLeft">
                        <div class="contact-box">
                            <h5 class="title">@TouristaFrontEnd.Resources.Global.Footer_ContactUs</h5>

                            <p class="text">
                                @TouristaFrontEnd.Resources.Global.Contactus_Text
                                    
                            </p>
                            <form class="contact-form"  id="myContactForm"> 
                                <input type="text" class="form-control form-input"
                                       placeholder="@TouristaFrontEnd.Resources.Global.ContactUs_FullName" id="FirstName"
                                       data-validation-length="min4" data-validation="required"
                                       data-validation-error-msg="@TouristaFrontEnd.Resources.Global.ContactUs_Firstname_Val">

                                <input type="email" placeholder="@TouristaFrontEnd.Resources.Global.ContactUs_Email"
                                       class="form-control form-input" id="Email" data-validation="email"
                                       data-validation-error-msg="@TouristaFrontEnd.Resources.Global.ContactUs_Email_Val">

                                <textarea class="form-control form-input" placeholder="@TouristaFrontEnd.Resources.Global.ContactUs_Message"
                                          id="Message"
                                          rows="5" data-validation="required"
                                          data-validation-error-msg="@TouristaFrontEnd.Resources.Global.ContactUs_Message_Val"></textarea>
                        
                                        <div id="MSGCONTACT" style="color: red;"> </div>

                                <div class="contact-submit">
                                    <button id="sendBtn"  data-hover="SEND NOW" class="btn btn-slide">
                                        <span class="text">@TouristaFrontEnd.Resources.Global.ContactUs_SendInquiry</span>
                                        <span class="icons fa fa-long-arrow-right"></span>
                                    </button>

                                </div>
                            </form>
                        </div>
                    </div>
                    <div data-wow-delay="0.5s" class="wrapper-form-images wow fadeInRight"><img src="/Content/images/background/bg-banner-contact-form.jpg" alt="" class="img-responsive"></div>
                </div>
            </div>
        </section>
    </div>
    <!-- BUTTON BACK TO TOP-->
    <div id="back-top"><a href="#top" class="link"><i class="fa fa-angle-double-up"></i></a></div>
</div>

