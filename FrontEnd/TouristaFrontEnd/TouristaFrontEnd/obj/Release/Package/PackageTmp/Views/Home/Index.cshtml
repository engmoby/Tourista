                </div>
            </div>
        </div>
    </section>


    @Html.Partial("BackageHome")

    <section class="videos layout-1">
        <div class="container">
            <div class="row">
                <div class="col-md-5">
                    <div class="video-wrapper padding-top padding-bottom">
