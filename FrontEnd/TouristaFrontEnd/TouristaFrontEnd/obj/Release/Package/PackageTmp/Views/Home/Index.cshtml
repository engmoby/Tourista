    </section>

    @*here is flight*@

    <section class="about-us layout-1 padding-top padding-bottom">
        <div class="container">
            <div class="row">
                <div class="col-md-7">
                    <div class="group-title">
                        <div class="sub-title">
                            <p class="text">@TouristaFrontEnd.Resources.Global.About_Title</p>
                        </div>
                        <h2 class="main-title">we are Tourista</h2>
                    </div>
                    <div class="about-us-wrapper">
