                    <div class="video-thumbnail">
                        <div class="video-bg"><img src="/Content/images/homepage/video-bg.jpg" alt="" class="img-responsive"></div>
                        <div class="video-button-play"><i class="icons fa fa-play" style="margin:25"></i></div>
                        <div class="video-button-close"></div>
                        @*<iframe src="@Common.VideoUrl" allowfullscreen="allowfullscreen" class="video-embed"></iframe>*@
                        <iframe src="https://www.youtube.com/embed/AAo5dgCpGZ0?rel=0" allowfullscreen="allowfullscreen" class="video-embed"></iframe>
                    </div>
                </div>
            </div>
