                        <li>
                            @Html.ActionLink(@TouristaFrontEnd.Resources.Global.Career_Index_Title, "Index", "Career", null, new { @class = "main-menu" })
                        </li>
                        <li>
                            @Html.ActionLink(@TouristaFrontEnd.Resources.Global.Header_Tour, "Index", "Tour", null, new { @class = "main-menu" })
                        </li>
                    </ul>

                </div>
