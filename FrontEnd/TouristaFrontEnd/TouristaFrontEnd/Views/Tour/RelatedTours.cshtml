@using Tourista.API.Models
@using TouristaFrontEnd.Helper
@model List<Tourista.API.Models.TourModel>

@if (Model != null)
{ <div class="special-offer margin-top70">
        <h3 class="title-style-2">@TouristaFrontEnd.Resources.Global.Related</h3>
        <div class="special-offer-list" style="margin-bottom: 44px;height: max-content;">

            @foreach (TourModel TourObj in Model)
            {

                <div class="special-offer-layout">
                    <div class="image-wrapper">
                        <a href="/Tour/Details/@TourObj.TourId" class="link"><img  style="height: 181px;" src="@TourObj.ImagesURL[0]" alt="" class="img-responsive"></a>

                        <div class="title-wrapper">
                            <a href="/Tour/Details/@TourObj.TourId" class="title">
                                @(@TourObj.TitleDictionary[@Common.CurrentLang].Length >= 20 ? TourObj.TitleDictionary[@Common.CurrentLang].Substring(0, 20) : TourObj.TitleDictionary[@Common.CurrentLang])
                            </a>
                            <i class="icons flaticon-circle"></i>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
}
