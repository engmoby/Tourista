    <script src="~/Scripts/jquery.blockUI.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            var apiUrl = document.querySelector('#HServicesURL').value;
            var currentLang = document.querySelector('#HCurrentLang').value;
            document.getElementById("HotelMore").style.display = "none";

            //   var searchkeys = document.querySelector('#searchkey').value;
            //      alert(searchkeys);

            $("#searchnow").click(function () {
                window.location.href = "@System.Configuration.ConfigurationManager.AppSettings["HomeUrl"]" + "/news/Search?keyword=" + document.querySelector('#searchkeyword').value;

            }
          );

            //$.blockUI({
