                    //  //  console.log(value[i].DisplayValue);
                    //  //  $.localStorage('hotelListRead', value[i].DisplayValue);
                    //}
                    // unblock when ajax activity stops
                    $(document).ajaxStop($.unblockUI);
                },
                error: function (msg) {
                    // alert("hotel error");
                }
            });

            /*load footer data*/
            $.ajax({
                url: apiUrl + "/SystemParameters/ContactUs/GetAll?langId=@Common.CurrentLang",
                type: "Get",
                success: function (data) {
                    $(
                        "<p style='direction: ltr;margin-bottom: 6px;'>" + data.PhoneNo1 + "<br>" + data.PhoneNo2 + "</p>"
                     ).appendTo("#divphones");
                    $(
                        "<p style='margin-bottom: 6px;'>" +
                        "<a href='mailto:#'>" + data.MailNo1 + ""
                       + "</p>"
                    ).appendTo("#divmail");
                    $(
                        "<p style='margin-bottom: 6px;'>" +
                        "@Front.Resources.Global.Footer_PostalCode  " + data.PostalCode + ""
                        + "</p>"
                    ).appendTo("#divmail");
                    $(
                        "<p style='margin-bottom: 6px;'>" +
                        "@Front.Resources.Global.Footer_Mailbox  " + data.Mailbox + ""
                        + "</p>"
                    ).appendTo("#divmail");

                    $(
                        "<li>" + "<a target='Blank' href='" + data.Facebook + "'>" + "<i class='fa fa-facebook'></i>" + "</i></a>"
                        + "<li>" + "<a target='Blank' href='" + data.Twitter + "'>" + "<i class='fa fa-twitter'></i>" + "</i></a>"
                        + "<li>" + "<a target='Blank' href='" + data.Instgram + "'>" + "<i class='fa fa-instagram'></i>" + "</i></a>"
                        + "<li>" + "<a target='Blank' href='" + data.Youtube + "'>" + "<i class='fa fa-youtube'></i>" + "</i></a>"
                    ).appendTo("#divsocial");

                    //$(
                    //    "<p style='direction: ltr;margin-bottom: 6px;'>" + data.PhoneNo1 +  "</p>"
