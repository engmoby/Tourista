            //});
            //$.getJSON("http://localhost:2798/File/Home.json", function (json) {
            //    console.log(json); // this will show the info it in firebug console
            //});
            $.ajax({
                url: apiUrl + "/SystemParameters/Hotels/GetAllWithCount?langId=@Common.CurrentLang",
                type: "Get",
                success: function (data) {
                    var more = "View More";
                    var list = [];
                    if (data.length === 0) {
                        document.getElementById("hotelMenu").style.display = "none";
                    }
                    //if (data.length <= 10) {
                    //    document.getElementById("HotelMore").style.display = "block";
                    //}
                    for (var i = 0; i < data.length; i++) {

                        if (data[i].ImageList.length > 0 && data[i].FeaturesList.length > 0) {

                            $(
                                "<li>" +
                                "<a href='/Hotel/Details/" + data[i].Id + "'>" + data[i].TitleDictionary['@Common.CurrentLang'] + "</i></a>"

                            ).appendTo("#ulAllHotels");
                            $( 
                            "<option value='" + data[i].TitleDictionary['@Common.CurrentLang'] + "'>" + data[i].TitleDictionary['@Common.CurrentLang'] + "</option>"

                            ).appendTo("#HotelName");
                        }
                        //else {
                        //    document.getElementById("hotelMenu").style.display = "none";
                        //}

                        // list.push(data[i].Id);
                    }
                    if (data.length >= 5) {
                        $(
                            "<li>" + "<a href='/Hotel/Index'>" + more + "</i></a>"
                        ).appendTo("#ulAllHotels");
                    }
                    // $.localStorage('listlist', list);

                    //  var value = $.localStorage('hotelList');
